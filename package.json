{
  "name": "rykz-spcm",
  "version": "1.0.2",
  "description": "rykz's Skyrim Platform Configuration Menu",
  "scripts": {
    "dev": "node ./scripts/pre-compile.js && tsc-watch --onSuccess \"yarn helper-dev\"",
    "dev-plugin": "node ./scripts/pre-compile.js && tsc-watch --onSuccess \"node ./scripts/post-compile.js main settings\"",
    "dev-ui": "yarn run webpack --config ./webpack.nonminified.config.js --watch --progress",
    "dev-spcm-generator": "yarn run webpack --config ./docs/spcm-generator/webpack.config.js --watch --progress",
    "build": "node ./scripts/pre-compile.js && tsc && yarn build-ui && node ./scripts/post-compile.js main ui settings zip",
    "build-plugin": "node ./scripts/pre-compile.js && tsc && node ./scripts/post-compile.js",
    "build-zip": "node ./scripts/pre-compile.js && tsc && yarn build-ui && node ./scripts/post-compile.js zip",
    "build-install": "node ./scripts/pre-compile.js && tsc && yarn build-ui && node ./scripts/post-compile.js main ui settings",
    "build-ui": "yarn run webpack --config ./webpack.minified.config.js",
    "build-ui-nonminified": "yarn run webpack --config ./webpack.nonminified.config.js",
    "build-spcm-generator": "yarn run webpack --config ./docs/spcm-generator/webpack.config.js",
    "build-demo": "yarn build-ui-nonminified && node ./scripts/publish-demo.js",
    "helper-dev": "yarn build-ui-nonminified && node ./scripts/post-compile.js main ui settings"
  },
  "author": "rzkyif AKA rykz",
  "license": "GPL-3.0-only",
  "devDependencies": {
    "@babel/core": "^7.16.7",
    "@babel/preset-env": "^7.16.7",
    "@types/node": "^16.11.11",
    "archiver": "^5.3.0",
    "babel-loader": "^8.2.3",
    "copy-webpack-plugin": "^10.1.0",
    "core-js": "^3.20.2",
    "css-loader": "^6.5.1",
    "css-minimizer-webpack-plugin": "^3.2.0",
    "fs-extra": "^10.0.0",
    "html-minimizer-webpack-plugin": "^3.4.0",
    "less": "^4.1.2",
    "less-loader": "^10.2.0",
    "style-loader": "^3.3.1",
    "terser": "^5.10.0",
    "terser-webpack-plugin": "^5.2.5",
    "tsc-watch": "^4.6.0",
    "typescript": "^4.5.4",
    "webpack": "^5.65.0",
    "webpack-cli": "^4.9.1"
  }
}
